<?xml version="1.0" encoding="utf-8"?>
<!--
    Post Layout is used for the Post Recycler View
     -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentEnd="true"
    android:id="@+id/llyPostLayout"
    android:layout_alignParentStart="true">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvPost"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="12.5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginBottom="5dp"
        android:elevation="6dp"
        android:clickable="true"
        app:cardCornerRadius="20dp"
        android:focusable="true">

        <ImageView
            android:id="@+id/imgPost"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:src="@drawable/baseline_article_24"
            android:contentDescription="@string/image_of_post" />

        <TextView
            android:id="@+id/txtPostTitle"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="9dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="start"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="@string/need_help_with_a_post"
            android:textFontWeight="20"
            android:textSize="18sp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/txtPostDescription"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:layout_marginStart="80dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:gravity="start"
            android:padding="10dp"
            android:text="@string/this_is_a_test_for_text_and_a_test_for_text_once_again"
            android:textColorHint="#757575"
            android:textSize="16sp"
            tools:ignore="TextSizeCheck" />
        
    </androidx.cardview.widget.CardView>

</LinearLayout>