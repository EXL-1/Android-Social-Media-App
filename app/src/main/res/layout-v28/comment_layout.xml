<?xml version="1.0" encoding="utf-8"?>

<!--
    Comment Layout used for the comment Recycler View
     -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/llyCommentLayout"
    tools:context=".comment.CommentPostFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCommentInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/txtComment"
            android:layout_width="350dp"
            android:layout_height="29dp"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:background="@color/white"
            android:ems="10"
            android:gravity="start"
            android:padding="5dp"
            android:text="@string/this_is_a_test_for_text_and_a_test_for_text_once_again"
            android:textColorHint="#757575"
            android:textSize="16sp"
            tools:ignore="LabelFor,TextSizeCheck" />

        <TextView
            android:id="@+id/txtCommentByUser"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:elevation="2dp"
            android:padding="5dp"
            android:text="@string/by_lucas_malik"
            android:textFontWeight="20"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/txtCommentDate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="15dp"
            android:layout_marginTop="75dp"
            android:layout_marginBottom="10dp"
            android:elevation="2dp"
            android:padding="5dp"
            android:text="@string/sent_19_08_2024"
            android:textFontWeight="20"
            android:textSize="16sp"
            tools:ignore="TextSizeCheck" />


    </androidx.cardview.widget.CardView>
</LinearLayout>